<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Notice-bored</title>
    <style>
        body{
        background-color: aliceblue;
        color: navy;
        }
    </style>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container mt-5">
        <h1 class="mb-4">Feedback</h1>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Contact ID</th>
                    <th>Email</th>
                    <th>Contact Type</th>
                    <th>View</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% contact.forEach(function(contact) { %>
                    <tr>
                        <td><%= contact.contactid %></td>
                        <td><%= contact.email %></td>
                        <td><%= contact.contacttype %></td>
                        <td><a href="/feedback/view/<%= contact.contactid %>" class="btn btn-info">View</a></td>
                        <td><a href="/feedback/edit/<%= contact.contactid %>" class="btn btn-warning">Edit</a></td>
                        <td><a href="/deletecontact/<%= contact.contactid %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>