<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Notice-bored</title>
    <style>
        .post-card {
            margin-bottom: 20px;
            padding: 20px;
            border: 1px solid black;
            height: 600px;
        }

        img {
            height: 60vh;
            width: 90%;
        }
        h1{
            padding: 10px 0;
        }
        body{
        background-color: aliceblue;
        color: navy;
        }
    </style>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <h1>All Posts</h1>
        <a href="/createpost" class="btn btn-primary">Create</a><br><br>
        <div class="row">
            <% posts.forEach(post => { %>
            <div class="col-md-4 col-sm-6">
                <div class="post-card">
                    <div class="post-details">
                        <div><strong>Post ID:</strong> <%= post.postid %></div>
                        <div><img src="images/<%= post.content %>" alt="Post Image" ></div>
                        <div><strong>Name:</strong> <%= post.name %></div>
                        <% let d = new Date(post.dt);
                        evday = d.getDate();
                        evmnth = d.getMonth()+1;
                        evyr = d.getFullYear(); 
                        hours =('0'+ d.getHours()).slice(-2);
                        minutes =('0'+ d.getMinutes()).slice(-2);%>
                        <div><strong>Date:</strong> <%= `${evday}/${evmnth}/${evyr}` %></div>
                        <div><strong>Time:</strong> <%= `${hours}:${minutes}` %></div>
                        <a href="browse/<%=post.postid%>" class="btn btn-primary btn-sm">View</a>
                        <a href="browse/<%=post.postid%>/update" class="btn btn-success btn-sm">Edit</a>
                        <a href="browse/<%=post.postid%>/delete" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</body>
</html>